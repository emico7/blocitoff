<h2>Username: <%= @user.username %></h2>

<div class="row">
  <div class="col-md-8">
    <p><strong>Email: </strong><%= @user.email %></p>
    <p><strong>Member since: </strong><%= @user.created_at.to_date %></p>
  </div>
</div>

<div class="row">
  <div class="col-md-8">
    <div class="media">
      <div class="media-body">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Description</th>
              <th>Days left</th>
              <th>Complete</th>
            </tr>
          </thead>

          <tbody>
            <% @user.items.each do |item| %>
              <tr>
                <td><%= item.name %>
              </tr>
           <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <% if current_user %>
      <div class='new-item'>
        <%= render 'items/form', item: Item.new, user: @user %>
      </div>
    <% end %>
  </div>
</div>
